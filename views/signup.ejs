                    <input type="text" id="firstname" name="name" required><br><br>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required><br><br>

                    <label for="account_password">Password:</label>
                    <input type="password" id="password" name="password" required
                        pattern="(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[A-Za-z\d!@#$%^&*]{6,}"
                        title="Password must be at least 12 characters long and include 1 capital letter, 1 number, and 1 special character"><br><br>
                    <p>password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special
                        character
                    </p>

                    <!-- <label for="email">usertype:</label>
                    <input type="email" id="email" name="usertype" required><br><br> -->

                    <button type="submit">Register</button>
                </form>
                <p>Already have an account? <a href="/account/login">Login here</a></p>
            </div>
        </div>